<div class="container">
    <h2>Login</h2>

    <form action="" method="post" class="form">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">

        <div class="form-group">
            <label for="entryUsername">Username/E-mail</label>
            <input type="text" id="entryUsername" name="username" autocomplete="off" autofocus="autofocus" class="form-control" />
        </div>

        <div class="form-group">
            <label for="entryPassword">Password</label>
            <input type="password" id="entryPassword" name="password" autocomplete="off" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Login!</button>
    </form>
</div>
